/* pages/recognition/index.wxss */

.imagelist{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 20rpx 20rpx;
  justify-content: flex-start;
  position: relative;
}
.imagelist:last-child{
 justify-self: flex-start;
}

.image-size{
  height: 240rpx;
  width: 30%;
  margin:10rpx ;
  position: relative;
}

.imageMask{
  position: absolute;
  top:0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  background:gray;
  color:white;
  /* text-align: center;
  vertical-align: center; */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0.8rem;
}
.imageMask-success{
  color:#07c160;
  opacity: 0.8;
}
.imageMask-success:active{
  opacity: 0.2;
}

.imageMask-fail{
  color:red;
}

.imageMask-no-text{
  color:#ff976a;
}
.drag-note{
  width: 100%;
  font-size: 0.8rem;
  color: gray;
  text-align: center;
}