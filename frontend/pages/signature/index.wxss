page {
  background: #fbfbfb;
  height: auto;
  overflow: hidden;
}

.container {
  width: 100%;
  height: 95vh;
  margin: 30rpx 0;
  overflow: hidden;
  display: flex;
  align-content: center;
  flex-direction: row;
  justify-content: center;
  font-size: 28rpx;
}

.handWriting {
  background: #fff;
  width: 100%;
  height: 95vh;
}
.radio-group{
  margin-left: 20rpx;
}

.handRight {
  display: inline-flex;
  align-items: center;
}

.handCenter {
  border: 4rpx dashed #e9e9e9;
  flex: 5;
  overflow: hidden;
  box-sizing: border-box;
  height: 100%;
}

.handTitle {
  transform: rotate(90deg);
  flex: 1;
  color: #666;
}

.handBtn button {
  font-size: 28rpx;
}

.handBtn {
  height: 100%;
  width: 120rpx;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: space-between;
  flex: 1;
  align-items: center;
}

.buttonGroup{
  transform: rotate(90deg);
  display: flex;
  flex-direction: row;
  width: 500rpx;
  /* height: 300rpx;
  width: 100%; */
}
.radio-icon-class{
  background: var(--aak-color);
  width: 20rpx;
  height: 20rpx;
  border-radius: 100%;
}

.radio-icon-class::before{
  /* content: none; */
}

.radio-custom-class{
  transform: rotate(90deg);
  margin-top:10rpx;
  /* margin-top: 30rpx; */
}

.finish-btn{
  margin-left: 30rpx;
}

.slider-container{
  transform: rotate(90deg);
  margin-top: 160rpx;
}

.slider-custom-class{
  width: 200rpx;
}

.delBtn {
  margin-top: 30rpx;
}

.delBtn image {
  position: absolute;
  top: 13rpx;
  left: 25rpx;
}

.subBtn {
  position: absolute;
  bottom: 52rpx;
  left: -3rpx;
  display: inline-flex;
  transform: rotate(90deg);
  background: #008ef6;
  color: #fff;
  margin-bottom: 30rpx;
  text-align: center;
  justify-content: center;
}

.black-select {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 30rpx;
  left: 25rpx;
}
.black-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 30rpx;
  left: 10rpx;
}
.red-select {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top:140rpx;
  left:25rpx;
}
.red-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 120rpx;
  left: 10rpx;
}