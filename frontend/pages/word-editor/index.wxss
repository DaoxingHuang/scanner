.container{
  justify-content: flex-start;
}

.header{
  display: flex;
  width: 100%;
  justify-content: space-around;
  padding: 10rpx 0;
  border-bottom: rgba(128, 128, 128, 0.2) solid 3rpx;
  font-size: 0.8rem;
  font-weight: 100;
}
.header-item{
}

.header-item:active{
  color:#07c160
}

.image-container{
  position: relative;
}
