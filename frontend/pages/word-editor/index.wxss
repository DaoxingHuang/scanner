.movable-area{
  width: 100vw;
  height: 100vh;
  z-index: 9999999;
}

.drawer{
  position: absolute;
  bottom: 30rpx;
}

.dragger-item {
  height: 10rpx;
  width: 80rpx;
  border-radius: 10rpx;
  background-size: contain;
  background-repeat: no-repeat;
  display: flex;
  background:white;
  justify-content: center;
  align-items: center;
  /* background-image: url('data:image/png;base64,'); */
}

.dragger-item-text{
  color: white;
  font-size: 20rpx;
  align-self: flex-start;
  padding-left: 10rpx;
}

.dragger-movable-view{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: black;
  flex-direction: column;
  height: 30px;
}

.text-area{
  position: absolute;
  bottom: 80rpx;
  width: 100%;
  padding-bottom: 40rpx;
  border: #07c160 solid 3rpx;
  background:black;
  color:white;
}
