/* pages/image-list/index.wxss */
.imagelist{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 20rpx 20rpx;
  justify-content: flex-start;
}
.imagelist:last-child{
 justify-self: flex-start;
}

.image-size{
  height: 240rpx;
  width: 30%;
  margin:10rpx ;
  border: 3rpx dashed #1296db;
  position: relative;
}
.image-add{
  /* margin-left: 20rpx; */
  background:#ffffff;
  background-size: 50rpx;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  background-image: url('data:image/png;base64,');
  background-size: 60rpx;
}

.image-footer{
  position: fixed;
  display: block;
  bottom: 10rpx;
  padding: 20rpx;
  width: 90%;
  text-align: center;
}

.shibie-custom-class{
  /* margin: 0 30rpx; */
  /* margin-left: 30rpx;
  margin-right: 30rpx; */
}

.close-custom-class{
  position: absolute;
  top:10rpx;
  right: 10rpx;
  opacity: 0.6;
}

.close-custom-class:active{
  opacity: 1;
}


.drag-note{
  width: 100%;
  font-size: 0.8rem;
  color: gray;
  text-align: center;
}
