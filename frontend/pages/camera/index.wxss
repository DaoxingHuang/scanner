.container{
  display: flex;
  color:white;
  /* background:black; */
}

.camera-container{
}

.camera{
  width: 100vw;
  height: 80vh;
}
.operaion{
  width: 100vw;
  height: 20vh;
  border-top-left-radius: 20%;
  border-top-right-radius: 20%;
}

.mode{
  text-align: center;
}

.main-item-img-content{
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
  background:#ffffff;
  background-size: 50rpx;
    background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  background-image: url('data:image/png;base64,');
  background-size: 60rpx;
}
.main-camera-container{
  border-radius: 100%;
  border: 5rpx solid rgb(143, 139, 139,0.4);
}
.main-camera-container:active{
  border-radius: 100%;
  border-color: green;
  transform: rotate(-45deg);
}
.main-camera{
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
  background:#ffffff;
  background-size: 50rpx;
    background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  background-image: url('data:image/png;base64,');
  background-size: 80rpx;
}

.choose{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top:20rpx;
}
.main-camera-list{
  position: relative;
}
.main-camera-count{
  position: absolute;
  top: 0;
  right: 0;
  box-sizing: border-box;
  min-width: 16px;
  padding: 0 3px;
  color: #fff;
  font-weight: 500;
  font-size: 12px;
  font-family: -apple-system-font, Helvetica Neue, Arial, sans-serif;
  line-height: 1.2;
  text-align: center;
  background-color: #ee0a24;
  border: 1px solid #fff;
  border-radius: 16px;
  -webkit-transform: translate(50%, -50%);
  transform: translate(50%, -50%);
  -webkit-transform-origin: 100%;
  transform-origin: 100%;
}

.fixed-width{
  width: 60rpx;
  height: 100%;
}

